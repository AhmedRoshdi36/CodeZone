@using CodeZone.DAL.Entities
@model StockTransaction

@{
    ViewData["Title"] = "Stock Transaction Details";
}

<h1>Stock Transaction Details</h1>

<hr />

<div class="card">
    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-4">Warehouse</dt>
            <dd class="col-sm-8">
                @Model.Warehouse?.Name
            </dd>

            <dt class="col-sm-4">Product</dt>
            <dd class="col-sm-8">
                @Model.Product?.Name (@Model.Product?.SKU)
            </dd>

            <dt class="col-sm-4">Quantity</dt>
            <dd class="col-sm-8">
                @Model.Quantity
                @if (Model.Quantity > 0)
                {
                    <span class="badge bg-success ms-2">Stock In</span>
                }
                else
                {
                    <span class="badge bg-danger ms-2">Stock Out</span>
                }
            </dd>

           

        </dl>

    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        Back to List
    </a>
</div>
